<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ly_skip"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ly_categories"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/amcPackage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/radio_blue_pck"

                android:textSize="18dp"/>

            <Button
                android:id="@+id/otherPackage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/radio_blue_pck"
                android:gravity="center_vertical"
                android:padding="@dimen/default_padding_two"
                android:text="@string/book_most_popular_tests"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"/>


        </LinearLayout>
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/test_receyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/default_margin_ledt"
                android:scrollbarFadeDuration="0"
                android:clipToPadding="false"
                android:scrollbars="vertical"/>
            <!--<include layout="@layout/book_a_test_item"/>-->

        </android.support.v4.widget.SwipeRefreshLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/draggable_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"

        android:layout_marginRight="10dp"

        android:background="@drawable/blue_circle"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cart_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:background="@drawable/mycart_icon"/>

            <TextView
                android:id="@+id/cart_count"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/redcircle"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="14dp"/>

        </FrameLayout>

        <TextView
            android:id="@+id/cartpricetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="\u20B9 2400"
            android:textColor="@color/white"
            android:textSize="14dp"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/ly_skip"
        android:layout_width="match_parent"
                  android:layout_height="wrap_content"

        android:layout_alignParentBottom="true">
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="SKIP"
        android:padding="5dp"
                android:layout_gravity="center"
        android:background="@color/grey"/>
    </FrameLayout>

</RelativeLayout>
